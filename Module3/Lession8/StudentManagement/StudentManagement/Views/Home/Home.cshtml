@model List<Student>
@{
    ViewBag.Title = "Home";
}
@*<div class="row">*@
    @foreach (var student in Model)
    {
        <div class="col-sm-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    @student.Fullname
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-4">
                            <img src=@Url.Content(student.Avatar) class="img-responsive" style="width:100%" alt="Image">
                        </div>
                        <div class="col-sm-8">
                            <p>Student Id: @student.Id</p>
                            <p>Dob:@student.Dob.ToString("dd/MM/yyyy")</p>
                            <p>Department: @student.Department.DepartmentName</p>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <a href="/Home/Detail/@student.Id" class="btn btn-primary">Detail</a>
                </div>
            </div>
        </div>
    }
@*</div>*@


